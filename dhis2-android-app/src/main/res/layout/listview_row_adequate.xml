<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:orientation="vertical"
    android:padding="0dp" >

    <include layout="@layout/listview_row_label" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/option_male_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes_button_adequate" />

        <RadioButton
            android:id="@+id/option_female_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_button_nonade" />

        <RadioButton
            android:id="@+id/option_other_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/none_button_novalue" />
    </RadioGroup>

</LinearLayout>